{
  "name": "ci-cd-demo",
  "version": "1.0.0",
  "description": "Node.js CI/CD Demo",
  "homepage": "https://doyinhubx.github.io/weather-runner",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "serve public -l 5000",
    "clean": "rm -rf public/bundle.js",
    "build": "npm run clean && browserify src/main.js -o public/bundle.js",
    "watch": "watchify src/main.js -o public/bundle.js -v",
    "dev": "run-p start watch",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint src/**/*.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d public",
    "deploy-firebase": "firebase deploy"
  },
  "keywords": [],
  "author": "Doyin ELUGBADEBO",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "browserify": "^17.0.1",
    "eslint": "^9.24.0",
    "eslint-plugin-security": "^3.0.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^24.2.5",
    "serve": "^14.2.4",
    "watchify": "^4.0.0"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "node-fetch": "^2.6.9"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
